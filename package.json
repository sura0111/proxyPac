{
  "name": "proxypacswitch",
  "version": "0.1.3",
  "private": true,
  "type": "module",
  "scripts": {
    "g:lint": "cd $INIT_CWD && eslint --ext .ts,.vue,.cjs,.json ./",
    "dev": "vite",
    "lint:style": "stylelint packages/**/*.{scss,vue}",
    "lint": "yarn workspaces foreach --since -pR run lint && yarn lint:style",
    "build": "vite build",
    "pack:crx": "crx pack dist -o ./artifacts/${npm_package_name}-v${npm_package_version}.crx",
    "pack:zip": "jszip-cli add dist/* -o ./artifacts/${npm_package_name}-v${npm_package_version}.zip",
    "release:patch": "bash ./preRelease.sh && yarn version patch && bash ./postRelease.sh",
    "release:minor": "bash ./preRelease.sh && yarn version minor && bash ./postRelease.sh",
    "release:major": "bash ./preRelease.sh && yarn version major && bash ./postRelease.sh"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@crxjs/vite-plugin": "^1.0.14",
    "@ffflorian/jszip-cli": "^3.4.1",
    "@html-eslint/eslint-plugin": "^0.19.1",
    "@html-eslint/parser": "^0.19.1",
    "@packages/background": "workspace:^",
    "@packages/core": "workspace:^",
    "@packages/popup": "workspace:^",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vitejs/plugin-vue": "^4.4.0",
    "crx": "^5.0.1",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^38.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-n": "^16.0.2",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-prettier-vue": "^4.2.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-vue": "^9.17.0",
    "postcss": "^8.4.31",
    "postcss-html": "^1.5.0",
    "prettier": "^3.0.2",
    "rimraf": "^5.0.5",
    "stylelint": "^15.10.3",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recess-order": "^4.3.0",
    "stylelint-config-recommended": "^13.0.0",
    "stylelint-config-recommended-scss": "^13.0.0",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-standard-scss": "^11.0.0",
    "stylelint-order": "^6.0.3",
    "stylelint-prettier": "^4.0.2",
    "stylelint-scss": "^5.2.1",
    "typescript": "^5.2.2",
    "vite": "^4.4.11",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-stylelint": "^5.1.1",
    "vitest": "^0.34.6"
  },
  "engines": {
    "node": ">=18"
  }
}
