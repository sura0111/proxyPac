{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolvePackageJsonExports": false,
    "allowJs": true,
    "noImplicitAny": false,
    "strict": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "resolveJsonModule": true,
    "exactOptionalPropertyTypes": true,
    "newLine": "lf"
  },
  "include": [
    "**/*.cjs",
    "**/*.js",
    "**/*.json",
    "**/*.ts",
    "**/*.vue",
    "packages/**/*.cjs",
    "packages/**/*.js",
    "packages/**/*.json",
    "packages/**/*.ts",
    "packages/**/*.vue",
    "./.eslintrc.cjs",
    "./.prettierrc.json"
  ],
  "exclude": ["node_modules"]
}
